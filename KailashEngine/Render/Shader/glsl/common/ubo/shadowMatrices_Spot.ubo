//------------------------------------------------------
// Shadow Matrices - Spot
//------------------------------------------------------
struct ShadowData {
  mat4 view;
  mat4 perspective;
  mat4 viewray;
  vec4 position_falloff;
  vec4 color_intensity;
  vec4 direction;
  vec4 spot_angle_blur;
};
layout(std140, binding = 3) uniform shadowMatrices
{
	ShadowData shadow_data[32];
};